@model FitTrack.Models.Resources.UsersDTO
@{
    ViewData["Title"] = "Meu Perfil";

}

<div class="max-w-[1400px] mx-auto w-full p-4 sm:p-6 lg:p-8">

    <div class="mb-8 flex flex-col sm:flex-row sm:items-end justify-between gap-4" style="margin-left: 0.5%;">
        <div>
            <h1 class="text-3xl font-bold text-white">Configurações de Perfil</h1>
            <p class="text-slate-400 mt-1">Gerencie seus dados e acompanhe sua evolução.</p>
        </div>
        <div class="flex gap-3">
            <button class= "save-btn px-4 py-2 rounded-lg bg-emerald-600 text-white hover:bg-emerald-500 shadow-lg shadow-emerald-500/20 transition text-sm font-bold">
                <i class="fa-solid fa-check mr-2"></i> Salvar Alterações
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <div class="space-y-6">
            
            <div class="glass-card rounded-2xl p-6 text-center relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-emerald-900/40 to-transparent"></div>
                <div class="relative z-10">
                    <div class="relative inline-block">
                        <img src="@Model.profilePic" alt="Avatar" class="w-24 h-24 rounded-full border-4 border-slate-800 shadow-xl object-cover">
                        <button class=" updloadProfilePic-btn absolute bottom-0 right-0 bg-emerald-500 text-white p-2 rounded-full hover:bg-emerald-400 transition shadow-lg border border-slate-900">
                            <i class="fa-solid fa-camera text-xs"></i>
                        </button>

                        <input type="file" id="profilePicInput" accept="image/*" class="hidden">

                    </div>
                    <h2 class="mt-4 text-xl font-bold text-white">@Model.name</h2>
                    <p class="text-sm text-slate-400">Membro desde @Model.creation_date_string</p>
                </div>

            </div>

            <div class="glass-card rounded-xl overflow-hidden p-2">
                <nav class="space-y-1">
                    <button id="tab-personal" class="w-full flex items-center px-4 py-3 bg-emerald-500/10 text-emerald-400 rounded-lg font-medium transition text-left tab-link">
                        <i class="fa-regular fa-user w-6"></i> Informações Pessoais
                    </button>
                    
                    <button id="tab-measures" class="w-full flex items-center px-4 py-3 text-slate-400 hover:bg-slate-800 hover:text-white rounded-lg transition text-left tab-link">
                        <i class="fa-solid fa-weight-scale w-6"></i> Medidas e Metas
                    </button>
                    
                    <button class="w-full flex items-center px-4 py-3 text-slate-400 hover:bg-slate-800 hover:text-white rounded-lg transition text-left opacity-50 cursor-not-allowed">
                        <i class="fa-solid fa-shield-halved w-6"></i> Segurança (Em breve)
                    </button>
                </nav>
            </div>
        </div>

        <div class="lg:col-span-2 relative min-h-[500px]">

            <div id="content-personal" class="space-y-6 content-tab">
                <div class="glass-card rounded-xl p-6 md:p-8 animate-entry">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-lg font-bold text-white flex items-center gap-2">
                            <i class="fa-regular fa-id-card text-emerald-500"></i> Dados Pessoais
                        </h3>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-xs font-medium text-slate-400 mb-1">Nome Completo</label>
                            <input type="text" id="name" value="@Model.name" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-emerald-500 transition">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-slate-400 mb-1">E-mail</label>
                            <input type="email" id="email" value="@Model.email" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-emerald-500 transition">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-slate-400 mb-1">Telefone</label>
                            <input type="text" id="phoneNumber" value="@Model.phoneNumber" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-emerald-500 transition">
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-xs font-medium text-slate-400 mb-1">Bio</label>
                            <textarea id="bio" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white text-sm focus:outline-none focus:border-emerald-500 transition h-24 resize-none">@Model.bio</textarea>
                        </div>
                    </div>
                </div>
                
                <div class="border border-red-900/30 bg-red-900/10 rounded-xl p-6 animate-entry">
                    <h3 class="text-lg font-bold text-red-400 flex items-center gap-2 mb-4">
                        <i class="fa-solid fa-triangle-exclamation"></i> Zona de Perigo
                    </h3>
                    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                        <p class="text-xs text-slate-500">Ao deletar sua conta, todos os seus dados serão perdidos.</p>
                        <button class="px-4 py-2 bg-red-600/20 hover:bg-red-600 text-red-500 hover:text-white border border-red-600/50 rounded-lg text-sm font-semibold transition whitespace-nowrap">
                            Deletar Conta
                        </button>
                    </div>
                </div>
            </div>

            <div id="content-measures" class="space-y-6 hidden content-tab">
                
                <div class="glass-card rounded-xl p-6 md:p-8 animate-entry">
                    <h3 class="text-lg font-bold text-white flex items-center gap-2 mb-6">
                        <i class="fa-solid fa-ruler-combined text-blue-400"></i> Medidas do Usuário
                    </h3>

                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">

                        <div>
                            <label class="block text-xs font-medium text-slate-400 mb-1">Peso Atual</label>
                            <div class="relative">
                                <input type="number"
                                    id="weight"
                                    step="0.1"
                                    value="@Model.weight"
                                    class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 pr-12 py-3 text-white focus:outline-none focus:border-blue-500 transition font-bold text-xl">
                                <span class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 font-bold">
                                    kg
                                </span>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-medium text-slate-400 mb-1">Altura</label>
                            <div class="relative">
                                <input type="number"
                                    id="height"
                                    value="@Model.height"
                                    class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 pr-12 py-3 text-white focus:outline-none focus:border-blue-500 transition font-bold text-xl">
                                <span class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 font-bold">
                                    cm
                                </span>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-medium text-slate-400 mb-1">Gordura (Estimado)</label>
                            <div class="relative">
                                <input type="number"
                                    id="bodyFat"
                                    value="@Model.bodyFat"
                                    step="0.1"
                                    min="0"
                                    max="100"
                                    class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 pr-10 py-3 text-white focus:outline-none focus:border-blue-500 transition font-bold text-xl">
                                <span class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 font-bold">
                                    %
                                </span>
                            </div>
                        </div>

                    </div>


                    <div class="mt-6 pt-6 border-t border-slate-700">
                        <h4 class="text-sm font-semibold text-slate-300 mb-4">Circunferências (cm)</h4>
                        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                            <div>
                                <label class="text-xs text-slate-500">Braço</label>
                                <div class="relative">
                                    <input type="number"
                                        id="armCircumference"
                                        value="@Model.armCircumference"
                                        class="w-full bg-slate-900/50 border border-slate-700 rounded px-2 pr-10 py-1 text-white text-sm">
                                    <span class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-500 text-xs font-semibold">
                                        cm
                                    </span>
                                </div>
                            </div>

                            <div>
                                <label class="text-xs text-slate-500">Peito</label>
                                <div class="relative">
                                    <input type="number"
                                        id="chestCircumference"
                                        value="@Model.chestCircumference"
                                        class="w-full bg-slate-900/50 border border-slate-700 rounded px-2 pr-10 py-1 text-white text-sm">
                                    <span class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-500 text-xs font-semibold">
                                        cm
                                    </span>
                                </div>
                            </div>

                            <div>
                                <label class="text-xs text-slate-500">Cintura</label>
                                <div class="relative">
                                    <input type="number"
                                        id="waistCircumference"
                                        value="@Model.waistCircumference"
                                        class="w-full bg-slate-900/50 border border-slate-700 rounded px-2 pr-10 py-1 text-white text-sm">
                                    <span class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-500 text-xs font-semibold">
                                        cm
                                    </span>
                                </div>
                            </div>

                            <div>
                                <label class="text-xs text-slate-500">Perna</label>
                                <div class="relative">
                                    <input type="number"
                                        id="legCircumference"
                                        value="@Model.legCircumference"
                                        class="w-full bg-slate-900/50 border border-slate-700 rounded px-2 pr-10 py-1 text-white text-sm">
                                    <span class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-500 text-xs font-semibold">
                                        cm
                                    </span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="glass-card rounded-xl p-6 md:p-8 animate-entry" style="animation-delay: 0.1s;">
                    <h3 class="text-lg font-bold text-white flex items-center gap-2 mb-6">
                        <i class="fa-solid fa-bullseye text-red-400"></i> Metas
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        
                        <div>
                            <label class="block text-xs font-medium text-slate-400 mb-3">Objetivo de Peso</label>
                            <div class="flex items-center gap-4 bg-slate-900/50 p-4 rounded-xl border border-slate-700">
                                <div class="h-12 w-12 rounded-full bg-slate-800 flex items-center justify-center text-emerald-500 border border-slate-700">
                                    <i class="fa-solid fa-scale-balanced"></i>
                                </div>
                                <div>
                                    <p class="text-xs text-slate-500">Meta</p>
                                    <p class="text-xl font-bold text-white">@Model.weightGoal <span class="text-sm text-slate-500">kg</span></p>
                                </div>
                                <div class="ml-auto text-right">
                                    <p class="text-xs text-slate-500">Faltam</p>
                                    <p class="text-sm font-bold text-emerald-400">+3.5 kg</p>
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <div class="flex justify-between text-xs text-slate-500 mb-1">
                                    <span>Atual: @Model.weight</span>
                                    <span>Meta: @Model.weightGoal</span>
                                </div>
                                <div class="w-full bg-slate-700 rounded-full h-2">
                                    <div class="bg-emerald-500 h-2 rounded-full" style="width: 85%"></div>
                                </div>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-medium text-slate-400 mb-3">Meta Semanal de Treinos</label>
                            <div class="flex gap-2">
                                <button type="button" class="flex-1 py-3 border border-slate-700 rounded-lg text-slate-400 hover:bg-slate-800 transition text-sm font-bold">3x</button>
                                <button type="button" class="flex-1 py-3 border border-slate-700 rounded-lg text-slate-400 hover:bg-slate-800 transition text-sm font-bold">4x</button>
                                <button type="button" class="flex-1 py-3 bg-emerald-500 text-white rounded-lg shadow-lg shadow-emerald-500/20 text-sm font-bold border border-emerald-400">5x</button>
                                <button type="button" class="flex-1 py-3 border border-slate-700 rounded-lg text-slate-400 hover:bg-slate-800 transition text-sm font-bold">6x</button>
                            </div>
                            <p class="text-xs text-slate-500 mt-2 text-center">Recomendado para Hipertrofia</p>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.tab-link').on('click', function() {
                $('.tab-link').removeClass('bg-emerald-500/10 text-emerald-400').addClass('text-slate-400 hover:bg-slate-800 hover:text-white');
                
                $(this).removeClass('text-slate-400 hover:bg-slate-800 hover:text-white').addClass('bg-emerald-500/10 text-emerald-400');

                $('.content-tab').addClass('hidden');

                const targetId = $(this).attr('id').replace('tab-', 'content-');
                $('#' + targetId).removeClass('hidden').hide().fadeIn(300);

            });


            $(document).on('click', '.updloadProfilePic-btn', function () {
                $('#profilePicInput').click();
            });

            // quando o usuário escolher a imagem
            $('#profilePicInput').on('change', function () {
                const file = this.files[0];
                if (!file) return;

                // validação simples
                if (!file.type.startsWith('image/')) {
                    notyf.error('Selecione uma imagem válida');
                    return;
                }

                const formData = new FormData();
                formData.append('profilePic', file);

                $.ajax({
                    url: '/User/UploadProfilePicture',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            notyf.success(response.message);

                            // atualiza avatar sem reload (cache bust)
                            $('#profileAvatar').attr(
                                'src',
                                response.imageUrl + '?v=' + Date.now()
                            );
                        } else {
                            notyf.error(response.message);
                        }
                    },
                    error: function () {
                        notyf.error('Erro ao enviar imagem');
                    }
                });
            });
            
            $(document).on('click', '.save-btn', function () {

                const $btn = $(this);

                $btn.prop('disabled', true).addClass('opacity-50 cursor-not-allowed');

                 var ProfileInfo = {
                    name: $('#name').val(),
                    email: $('#email').val(),
                    phoneNumber: $('#phoneNumber').val(),
                    weight: $('#weight').val(),
                    height: $('#height').val(),
                    bio: $('#bio').val(),
                    bodyFat: $('#bodyFat').val(),
                    armCircumference: $('#armCircumference').val(),
                    chestCircumference: $('#chestCircumference').val(),
                    waistCircumference: $('#waistCircumference').val(),
                    legCircumference: $('#legCircumference').val()
                };


                $.ajax({
                    url: '/User/SaveProfileInfo',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(ProfileInfo),
                    success: function (response) {
                        if (response.success) {
                            notyf.success(response.message);
                            
                        }
                        else{
                            notyf.error(response.message);

                        } 
                        
                    },
                    error: function (xhr) {
                        console.error(xhr.responseText);
                    },
                    complete: function () {
                        setTimeout(() => {
                            $btn.prop('disabled', false)
                                .removeClass('opacity-50 cursor-not-allowed');
                        }, 2000);
                    }
                });
            });
        });

        

    </script>

    <style>
        .animate-entry { animation: slideUp 0.4s ease-out forwards; }
        @@keyframes slideUp { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    </style>
}