@{
    Layout = null;
    ViewData["Title"] = "Acesso";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Acesso - FitTrack</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Inter', 'sans-serif'] },
                    colors: {
                        slate: { 800: '#1e293b', 850: '#172033', 900: '#0f172a' },
                        emerald: { 400: '#34d399', 500: '#10b981', 600: '#059669' }
                    }
                }
            }
        }
    </script>

    <style>
        body { 
            background-color: #0f172a; 
            color: #f8fafc;
            background-image: radial-gradient(#1e293b 1px, transparent 1px);
            background-size: 30px 30px;
        }
        .glass-card {
            background-color: rgba(30, 41, 59, 0.7); 
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(51, 65, 85, 0.5); 
        }
        /* Remove o autocomplete background azul */
        input:-webkit-autofill, input:-webkit-autofill:hover, input:-webkit-autofill:focus, input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 30px #0f172a inset !important;
            -webkit-text-fill-color: white !important;
            transition: background-color 5000s ease-in-out 0s;
        }
    </style>
</head>
<body class="min-h-[100dvh] flex items-center justify-center p-4 sm:p-6 relative overflow-hidden overflow-y-auto">

    <!-- Efeitos de Fundo (Glow) -->
    <div class="absolute top-0 left-0 sm:top-1/4 sm:left-1/4 w-64 h-64 md:w-96 md:h-96 bg-emerald-500/20 rounded-full blur-[80px] md:blur-[100px] pointer-events-none transform -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 sm:bottom-1/4 sm:right-1/4 w-64 h-64 md:w-96 md:h-96 bg-blue-600/10 rounded-full blur-[80px] md:blur-[100px] pointer-events-none transform translate-x-1/3 translate-y-1/3"></div>

    <div class="w-full max-w-md z-10 my-auto">

        <div id="login-container">
            <div class="text-center mb-6 md:mb-8">
                <div class="inline-flex items-center justify-center w-14 h-14 md:w-16 md:h-16 rounded-2xl bg-gradient-to-br from-emerald-400 to-emerald-600 shadow-lg shadow-emerald-500/20 mb-4 transition-all">
                    <i class="fa-solid fa-dumbbell text-2xl md:text-3xl text-white"></i>
                </div>
                <h2 class="text-2xl md:text-3xl font-bold tracking-tight text-white">Bem-vindo!</h2>
                <p class="text-sm md:text-base text-slate-400 mt-2">Acesse sua conta para evoluir.</p>
            </div>

            <div class="glass-card rounded-2xl p-6 md:p-8 shadow-2xl">
                <form id="loginForm" class="space-y-5">
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1.5">E-mail</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500 group-focus-within:text-emerald-500 transition"><i class="fa-solid fa-envelope"></i></div>
                            <input type="email" id="login-email" name="email" class="w-full bg-slate-900 border border-slate-700 text-white text-base md:text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block pl-10 p-3 placeholder-slate-600 transition shadow-inner" placeholder="seu@email.com" required>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between items-center mb-1.5">
                            <label class="block text-sm font-medium text-slate-300">Senha</label>
                            <a href="#" class="text-xs font-medium text-emerald-500 hover:text-emerald-400 hover:underline">Esqueceu?</a>
                        </div>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500 group-focus-within:text-emerald-500 transition"><i class="fa-solid fa-lock"></i></div>
                            <input type="password" id="login-password" name="password" class="w-full bg-slate-900 border border-slate-700 text-white text-base md:text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block pl-10 p-3 placeholder-slate-600 transition shadow-inner" placeholder="••••••••" required>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <input id="remember-me" type="checkbox" class="w-4 h-4 border border-slate-600 rounded bg-slate-800 focus:ring-3 focus:ring-emerald-500/50 accent-emerald-500">
                        <label for="remember-me" class="ml-2 text-sm font-medium text-slate-400 cursor-pointer">Lembrar de mim</label>
                    </div>
                    <button type="submit" class="w-full text-white bg-emerald-600 hover:bg-emerald-500 font-bold rounded-lg text-sm px-5 py-3.5 text-center shadow-lg shadow-emerald-500/30 transition-all duration-200 transform active:scale-[0.98] hover:-translate-y-0.5">Entrar</button>
                </form>

                <div class="my-6 flex items-center justify-center">
                    <div class="border-t border-slate-700 w-full"></div>
                    <span class="bg-transparent px-3 text-xs text-slate-500 font-medium uppercase whitespace-nowrap">Ou</span>
                    <div class="border-t border-slate-700 w-full"></div>
                </div>
                <div class="grid grid-cols-2 gap-3">
                    <button class="flex items-center justify-center gap-2 bg-slate-800 hover:bg-slate-700 text-white text-sm font-medium border border-slate-700 rounded-lg py-2.5 transition active:bg-slate-900"><i class="fa-brands fa-google text-red-500"></i> Google</button>
                    <button class="flex items-center justify-center gap-2 bg-slate-800 hover:bg-slate-700 text-white text-sm font-medium border border-slate-700 rounded-lg py-2.5 transition active:bg-slate-900"><i class="fa-brands fa-apple text-white"></i> Apple</button>
                </div>
            </div>
            
            <p class="text-center mt-6 text-sm text-slate-400">
                Não tem conta? <button id="btn-go-register" class="font-semibold text-emerald-500 hover:text-emerald-400 hover:underline transition p-2">Cadastre-se</button>
            </p>
        </div>

        <div id="register-container" style="display: none;">
            <div class="text-center mb-6">
                <h2 class="text-2xl md:text-3xl font-bold tracking-tight text-white">Crie sua conta</h2>
                <p class="text-sm md:text-base text-slate-400 mt-2">Comece sua jornada fitness hoje.</p>
            </div>

            <div class="glass-card rounded-2xl p-6 md:p-8 shadow-2xl">
                <form id="registerForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1.5">Nome completo</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500 group-focus-within:text-emerald-500 transition"><i class="fa-solid fa-user"></i></div>
                            <input type="text" id="register-name" name="name" class="w-full bg-slate-900 border border-slate-700 text-white text-base md:text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block pl-10 p-3 placeholder-slate-600 transition shadow-inner" placeholder="José Bezerra" required>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1.5">E-mail</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500 group-focus-within:text-emerald-500 transition"><i class="fa-solid fa-envelope"></i></div>
                            <input type="email" id="register-email" name="email" class="w-full bg-slate-900 border border-slate-700 text-white text-base md:text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block pl-10 p-3 placeholder-slate-600 transition shadow-inner" placeholder="seu@email.com" required>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1.5">Senha</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500 group-focus-within:text-emerald-500 transition"><i class="fa-solid fa-lock"></i></div>
                            <input type="password" id="register-password" name="password" class="w-full bg-slate-900 border border-slate-700 text-white text-base md:text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block pl-10 p-3 placeholder-slate-600 transition shadow-inner" placeholder="Mínimo 8 caracteres" required>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1.5">Confirmar senha</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500 group-focus-within:text-emerald-500 transition"><i class="fa-solid fa-shield-halved"></i></div>
                            <input type="password" id="register-confirmPassword" class="w-full bg-slate-900 border border-slate-700 text-white text-base md:text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block pl-10 p-3 placeholder-slate-600 transition shadow-inner" placeholder="Repita a senha" required>
                        </div>
                    </div>
                    <div class="flex items-start mt-2">
                        <div class="flex items-center h-5">
                            <input id="terms" type="checkbox" required class="w-4 h-4 border border-slate-600 rounded bg-slate-800 focus:ring-3 focus:ring-emerald-500/50 accent-emerald-500">
                        </div>
                        <label for="terms" class="ml-2 text-sm font-medium text-slate-400">Eu concordo com os <a href="#" class="text-emerald-500 hover:underline">Termos</a>.</label>
                    </div>
                    <button type="submit" class="w-full text-white bg-emerald-600 hover:bg-emerald-500 font-bold rounded-lg text-sm px-5 py-3.5 text-center shadow-lg shadow-emerald-500/30 transition-all duration-200 transform active:scale-[0.98] hover:-translate-y-0.5 mt-2">Criar conta</button>
                </form>
            </div>

            <p class="text-center mt-6 text-sm text-slate-400 pb-6">
                Já tem uma conta? <button id="btn-go-login" class="font-semibold text-emerald-500 hover:text-emerald-400 hover:underline transition p-2">Fazer login</button>
            </p>
        </div>

    </div>

    <script>



        $(document).ready(function() {
            // Alternar telas
            $('#btn-go-register').click(function(e) {
                e.preventDefault();
                $('#login-container').fadeOut(300, function() {
                    $('#register-container').fadeIn(300);
                });
            });

            $('#btn-go-login').click(function(e) {
                e.preventDefault();
                $('#register-container').fadeOut(300, function() {
                    $('#login-container').fadeIn(300);
                });
            });

            // AJAX para registro
            $('#registerForm').on('submit', function(e) {
                debugger
                e.preventDefault();

                var name = $('#register-name').val();
                var email = $('#register-email').val();
                var password = $('#register-password').val();
                var confirmPassword = $('#register-confirmPassword').val();

                $.ajax({
                    url: '/Login/Register',
                    type: 'POST',
                    data: {
                        name: name,
                        email: email,
                        password: password,
                        confirmPassword: confirmPassword
                    },
                    success: function(response) {
                        if (response.success) {
                            window.location.href = '/';
                            $('#register-container').fadeOut(300, function() {
                                $('#login-container').fadeIn(300);
                            });
                        } else {
                            alert(response.message); // mostrar erro
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('Ocorreu um erro ao registrar: ' + error);
                    }
                });
            });

            $('#loginForm').on('submit', function(e) {
                debugger
                e.preventDefault();

                var email = $('#login-email').val();
                var password = $('#login-password').val();

                $.ajax({
                    url: '/Login/Login', 
                    type: 'POST',
                    data: {
                        email: email,
                        password: password,
                    },
                    success: function(response) {
                        if (response.success) {
                            window.location.href = '/';
                            $('#register-container').fadeOut(300, function() {
                                $('#login-container').fadeIn(300);
                            });
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('Ocorreu um erro ao registrar: ' + error);
                    }
                });
            });
        });

    </script>

</body>
</html>