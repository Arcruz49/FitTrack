@{
    ViewData["Title"] = "Gerenciar Treinos";
}

<div class="max-w-[1400px] mx-auto w-full p-4 sm:p-6 lg:p-8 relative z-0">

    <!-- Header -->
    <div class="mb-8 flex flex-col sm:flex-row sm:items-end justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-white">Meus Treinos</h1>
            <p class="text-slate-400 mt-1">Gerencie suas fichas de treino.</p>
        </div>
        <button class="px-5 py-2.5 rounded-lg bg-emerald-600 text-white hover:bg-emerald-500 shadow-lg shadow-emerald-500/20 transition font-bold flex items-center gap-2">
            <i class="fa-solid fa-check"></i> Salvar Tudo
        </button>
    </div>


    <div id="workouts-container" class="flex gap-4 overflow-x-auto pb-4 mb-6 custom-scrollbar snap-x">
        
        @* <!-- Tab A -->
        <div class="workout-tab min-w-[160px] snap-start cursor-pointer group active" data-letter="A">
            <div class="tab-card p-4 rounded-xl border-2 transition-all relative overflow-hidden">
                <div class="flex justify-between items-start mb-2 relative z-10">
                    <span class="tab-badge text-xs font-bold px-2 py-1 rounded">A</span>
                    <i class="fa-solid fa-ellipsis-vertical text-slate-500 hover:text-white p-1"></i>
                </div>
                <h3 class="tab-title font-bold text-lg truncate relative z-10">Peito/Tríceps</h3>
                <p class="text-xs text-slate-500 mt-1 relative z-10">6 Exercícios</p>
                
                <!-- Glow Effect (Controlado via CSS) -->
                <div class="tab-glow absolute inset-0 opacity-0 transition-opacity duration-300"></div>
            </div>
        </div>

        <!-- Tab B -->
        <div class="workout-tab min-w-[160px] snap-start cursor-pointer group" data-letter="B">
            <div class="tab-card p-4 rounded-xl border-2 transition-all relative overflow-hidden">
                <div class="flex justify-between items-start mb-2 relative z-10">
                    <span class="tab-badge text-xs font-bold px-2 py-1 rounded">B</span>
                    <i class="fa-solid fa-ellipsis-vertical text-slate-500 hover:text-white p-1"></i>
                </div>
                <h3 class="tab-title font-bold text-lg truncate relative z-10">Costas/Bíceps</h3>
                <p class="text-xs text-slate-500 mt-1 relative z-10">5 Exercícios</p>
                <div class="tab-glow absolute inset-0 opacity-0 transition-opacity duration-300"></div>
            </div>
        </div>

        <!-- Tab C -->
        <div class="workout-tab min-w-[160px] snap-start cursor-pointer group" data-letter="C">
            <div class="tab-card p-4 rounded-xl border-2 transition-all relative overflow-hidden">
                <div class="flex justify-between items-start mb-2 relative z-10">
                    <span class="tab-badge text-xs font-bold px-2 py-1 rounded">C</span>
                    <i class="fa-solid fa-ellipsis-vertical text-slate-500 hover:text-white p-1"></i>
                </div>
                <h3 class="tab-title font-bold text-lg truncate relative z-10">Pernas</h3>
                <p class="text-xs text-slate-500 mt-1 relative z-10">7 Exercícios</p>
                <div class="tab-glow absolute inset-0 opacity-0 transition-opacity duration-300"></div>
            </div>
        </div> *@

        <button id="btn-create-new" type="button" class="min-w-[160px] snap-start border-2 border-dashed border-slate-700 rounded-xl p-4 flex flex-col items-center justify-center text-slate-500 hover:text-emerald-500 hover:border-emerald-500/50 hover:bg-slate-800/50 transition gap-2">
            <i class="fa-solid fa-plus text-xl"></i>
            <span class="font-medium text-sm">Novo Treino</span>
        </button>

    </div>

    <div class="glass-card bg-slate-800 border border-slate-700 rounded-2xl p-6 md:p-8">
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 border-b border-slate-700/50 pb-6">
            <div>
                <label class="block text-xs font-medium text-slate-400 mb-1">Identificador</label>
                <div class="flex items-center gap-3">
                    <div id="display-letter" class="h-10 w-10 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-500 font-bold border border-emerald-500/20 text-xl">A</div>
                    <input type="text" id="input-workout-name" value="Peito e Tríceps" class="w-full bg-slate-900 border-b-2 border-slate-700 focus:border-emerald-500 px-2 py-2 text-white text-lg font-bold focus:outline-none transition bg-transparent">
                </div>
            </div>
            <div>
                <label class="block text-xs font-medium text-slate-400 mb-1">Foco</label>
                <input type="text" id="input-workout-desc" value="Foco em progressão de carga." class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-emerald-500 transition">
            </div>
        </div>

        <div class="mb-6 relative">
            <div class="relative group">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-500"><i class="fa-solid fa-magnifying-glass"></i></div>
                <input type="text" placeholder="Pesquisar exercício..." class="w-full bg-slate-900/80 border border-slate-700 rounded-xl pl-12 pr-4 py-4 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500/50 transition">
                <button class="absolute right-2 top-2 bottom-2 bg-emerald-600 hover:bg-emerald-500 text-white px-4 rounded-lg font-medium text-sm transition">Add</button>
            </div>
        </div>

        <div id="exercises-list" class="space-y-3">
            <div class="bg-slate-900/40 border border-slate-700 rounded-xl p-4 flex flex-col sm:flex-row items-center gap-4">
                <div class="flex-1 w-full text-center sm:text-left">
                    <h4 class="font-bold text-white text-lg">Supino Reto</h4>
                    <span class="text-xs text-slate-400 bg-slate-800 px-2 py-0.5 rounded border border-slate-700">Peito</span>
                </div>
                <div class="flex items-center gap-2 bg-slate-900 rounded-lg p-1 border border-slate-700">
                    <input type="number" value="4" class="w-12 bg-transparent text-center text-white text-sm font-bold focus:outline-none border-b border-transparent focus:border-emerald-500" title="Séries">
                    <span class="text-slate-600">x</span>
                    <input type="number" value="12" class="w-12 bg-transparent text-center text-white text-sm font-bold focus:outline-none border-b border-transparent focus:border-emerald-500" title="Reps">
                </div>
                <button class="text-slate-500 hover:text-red-500 p-2"><i class="fa-solid fa-xmark text-xl"></i></button>
            </div>
        </div>

    </div>
</div>

<div id="newWorkoutModal" class="hidden fixed inset-0 z-[9999]" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-slate-900/90 backdrop-blur-sm transition-opacity" id="modalBackdrop"></div>

    <div class="fixed inset-0 z-10 overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
            <!-- Conteúdo do Modal -->
            <div class="relative transform overflow-hidden rounded-xl bg-slate-800 border border-slate-700 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-md">
                <div class="px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <h3 class="text-xl font-bold text-white mb-4 flex items-center gap-2">
                        <i class="fa-solid fa-folder-plus text-emerald-500"></i> Criar Novo Treino
                    </h3>
                    <form id="createForm" class="space-y-4">
                        @* <div>
                            <label class="block text-xs text-slate-400 mb-1">Letra</label>
                            <input type="text" placeholder="D" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:border-emerald-500 focus:outline-none">
                        </div> *@
                        <div>
                            <label class="block text-xs text-slate-400 mb-1">Nome</label>
                            <input id="newName" type="text" placeholder="Ex: Cardio e Abdômen" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:border-emerald-500 focus:outline-none">
                        </div>
                    </form>
                </div>
                <div class="bg-slate-800 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 gap-2 border-t border-slate-700">
                    <button id="add-workout-btn" type="button" class="w-full inline-flex justify-center rounded-lg bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 sm:w-auto">Criar</button>
                    <button type="button" id="btn-close-modal" class="mt-3 inline-flex w-full justify-center rounded-lg bg-slate-700 px-3 py-2 text-sm font-semibold text-slate-300 shadow-sm ring-1 ring-inset ring-slate-600 hover:bg-slate-600 sm:mt-0 sm:w-auto">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            
            $('#workouts-container').on('click', '.workout-tab', function () {
                $('.workout-tab').removeClass('active');
                $(this).addClass('active');

                const letter = $(this).data('letter');
                $('#display-letter').text(letter);

                $('#exercises-list')
                    .css('opacity', '0.4')
                    .animate({ opacity: 1 }, 200);
            });


            const $modal = $('#newWorkoutModal');

            $('#btn-create-new').on('click', function(e) {
                e.preventDefault();
                $modal.removeClass('hidden').fadeIn(200);
            });

            $('#btn-close-modal, #modalBackdrop').on('click', function() {
                $modal.fadeOut(200, function() {
                    $(this).addClass('hidden');
                });
            });

            GetWorkouts();



            $(document).on('click', '#add-workout-btn', function () {
                let newName = $('#newName').val()

                $.ajax({
                    url: '/Workout/CreateWorkout',
                    type: 'POST',
                    data: { name : newName},
                    success: function (response) {
                        if (response.success) {
                            $('#newWorkoutModal').addClass('hidden');
                            GetWorkouts();
                            notyf.success(response.message);
                        } else {
                            notyf.error(response.message);
                        }
                    },
                    error: function (xhr) {
                        alert('Erro ao criar: ' + xhr.responseText);
                    }
                });
            });

        });


        function GetWorkouts() {
            $.ajax({
                url: '/Workout/GetWorkouts',
                type: 'GET',
                success: function (response) {
                    if (!response.success) {
                        notyf.error(response.message);
                        return;
                    }

                    const container = $('#workouts-container');
                    const btnNew = $('#btn-create-new');

                    // Remove tabs antigas (mantém o botão)
                    container.find('.workout-tab').remove();

                    response.data.forEach((workout, index) => {

                        const isActive = index === 0 ? 'active' : '';

                        const tabHtml = `
                        <div class="workout-tab min-w-[160px] snap-start cursor-pointer group ${isActive}"
                            data-id="${workout.id}"
                            data-letter="${workout.letter}">
                            
                            <div class="tab-card p-4 rounded-xl border-2 transition-all relative overflow-hidden">
                                <div class="flex justify-between items-start mb-2 relative z-10">
                                    <span class="tab-badge text-xs font-bold px-2 py-1 rounded">
                                        ${workout.letter}
                                    </span>
                                    <i class="fa-solid fa-ellipsis-vertical text-slate-500 hover:text-white p-1"></i>
                                </div>

                                <h3 class="tab-title font-bold text-lg truncate relative z-10">
                                    ${workout.name}
                                </h3>

                                <p class="text-xs text-slate-500 mt-1 relative z-10">
                                    ${workout.description}
                                </p>

                                <div class="tab-glow absolute inset-0 opacity-0 transition-opacity duration-300"></div>
                            </div>
                        </div>`;

                        btnNew.before(tabHtml);
                    });
                },
                error: function (xhr) {
                    console.error(xhr.responseText);
                }
            });
        }

        

    </script>

    <!-- ESTILOS CONTROLADOS POR CLASSES (NÃO JS) -->
    <style>
        /* Estado Padrão (Inativo) */
        .tab-card {
            background-color: rgba(30, 41, 59, 0.4); /* slate-800/40 */
            border-color: #334155; /* slate-700 */
        }
        .tab-badge {
            background-color: #334155; /* slate-700 */
            color: #cbd5e1; /* slate-300 */
        }
        .tab-title { color: #cbd5e1; /* slate-300 */ }
        .tab-glow { opacity: 0; background-color: rgba(16, 185, 129, 0.1); filter: blur(10px); }

        /* Estado ATIVO (Aplicado quando a div pai tem a classe .active) */
        .workout-tab.active .tab-card {
            background-color: rgba(30, 41, 59, 0.9);
            border-color: #10b981; /* emerald-500 */
            transform: translateY(-4px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        .workout-tab.active .tab-badge {
            background-color: #10b981;
            color: white;
        }
        .workout-tab.active .tab-title { color: white; }
        .workout-tab.active .tab-glow { opacity: 1; }
        
        /* Scrollbar */
        .custom-scrollbar::-webkit-scrollbar { height: 4px; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #334155; border-radius: 4px; }
    </style>
}