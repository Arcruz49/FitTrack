@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitTrack</title>
    
    <!-- Google Fonts -->
    <link href="~/lib/google-fonts/google-fonts.css" rel="stylesheet">
    
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Tailwind CSS -->
    <script src="~/lib/tailwind/tailwind-3.4.17.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">


    <!-- Configuração do Tailwind -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Inter', 'sans-serif'] },
                    colors: {
                        slate: {
                            850: '#1e293b',
                            900: '#0f172a',
                        },
                        emerald: {
                            400: '#34d399',
                            500: '#10b981',
                            600: '#059669',
                            900: '#064e3b',
                        }
                    }
                }
            }
        }
    </script>

    <!-- Estilos Customizados Globais -->
    <style>
        body { background-color: #0f172a; color: #f8fafc; }
        
        /* Scrollbar customizada */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #0f172a; }
        ::-webkit-scrollbar-thumb { background: #334155; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #475569; }

        .glass-card {
            background-color: #1e293b;
            border: 1px solid #334155;
        }

        /* Chrome, Edge, Safari */
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>
</head>
<body class="antialiased min-h-screen flex flex-col font-sans">
    
    <nav class="border-b border-slate-700 bg-slate-900/95 sticky top-0 z-50 backdrop-blur">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center gap-2">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center gap-2 no-underline">
                        <i class="fa-solid fa-bolt text-emerald-500 text-2xl"></i>
                        <span class="font-bold text-xl tracking-tight text-white">Fit<span class="text-emerald-500">Track</span></span>
                    </a>
                </div>
                
                <div class="hidden md:flex space-x-8 text-sm font-medium text-slate-400">

                    <a asp-controller="Home"
                    asp-action="Index"
                    class="@(currentController == "Home" && currentAction == "Index"
                        ? "text-emerald-400 font-bold"
                        : "hover:text-white transition")">
                        Início
                    </a>

                    <a asp-controller="Workout"
                    asp-action="Privacy"
                    class="@(currentController == "Workout" && currentAction == "Index"
                        ? "text-emerald-400 font-bold"
                        : "hover:text-white transition")">
                        Treinos
                    </a>

                    <a asp-controller="History"
                    asp-action="Index"
                    class="@(currentController == "History"
                        ? "text-emerald-400 font-bold"
                        : "hover:text-white transition")">
                        Histórico
                    </a>

                </div>

                <div class="flex items-center gap-4">
                    
                    @* <button class="bg-emerald-600 hover:bg-emerald-500 text-white px-4 py-2 rounded-lg text-sm font-semibold transition shadow-lg shadow-emerald-500/20 hidden sm:block">
                        <i class="fa-solid fa-plus mr-1"></i> Add Treino
                    </button> *@

                    <div class="relative ml-3" id="profile-dropdown-container">
                        
                        <button type="button" id="profile-btn" class="flex rounded-full bg-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-slate-800 transition">
                            <span class="sr-only">Abrir menu</span>
                            <div class="h-8 w-8 rounded-full bg-slate-700 flex items-center justify-center border border-slate-600 hover:border-emerald-500 transition">
                                <i class="fa-solid fa-user text-slate-300"></i>
                            </div>
                        </button>

                        <div id="profile-menu" class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-slate-800 py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none border border-slate-700 transition-all duration-200">
                            <div class="px-4 py-2 border-b border-slate-700">
                                <p class="text-xs text-slate-400">Logado como</p>
                                <p id="userEmail" class="text-sm font-medium text-white truncate"></p>
                            </div>
                            
                            <a href="/User" class="block px-4 py-2 text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                                <i class="fa-solid fa-user-gear mr-2 w-4"></i> Perfil
                            </a>
                            <a href="#" class="block px-4 py-2 text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                                <i class="fa-solid fa-gear mr-2 w-4"></i> Configurações
                            </a>
                            
                            <div class="border-t border-slate-700 my-1"></div>
                            
                            <a asp-controller="Login" asp-action="Logout" class="block px-4 py-2 text-sm text-red-400 hover:bg-slate-700 hover:text-red-300 transition w-full text-left">
                                <i class="fa-solid fa-arrow-right-from-bracket mr-2 w-4"></i> Sair
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main role="main" class="flex-grow w-full">
        @RenderBody()
    </main>

    <footer class="border-t border-slate-800 py-6 mt-8 bg-slate-900">
        @* <div class="max-w-7xl mx-auto px-4 text-center text-slate-500 text-sm">
            &copy; 2025 - FitTrack - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-emerald-500 hover:underline">Privacidade</a>
        </div> *@
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>


    <script>

        const notyf = new Notyf();

        
        $(document).ready(function() {
            const $btn = $('#profile-btn');
            const $menu = $('#profile-menu');

            $btn.on('click', function(e) {
                e.stopPropagation(); 
                $menu.toggleClass('hidden');
            });

            $(document).on('click', function(event) {
                if (!$(event.target).closest('#profile-dropdown-container').length) {
                    $menu.addClass('hidden');
                }
            });
            
            $(document).on('keydown', function(e) {
                if (e.key === "Escape") {
                    $menu.addClass('hidden');
                }
            });

            getEmail();

        });


        function Logout() {
            $.ajax({
                url: '/Login/Logout',
                type: 'GET',
                success: function (response) {
                    if (response.success) {

                        
                    }
                    else {
                        alert(response.message);
                    }
                },
                error: function (xhr, status, error) {
                }
            });
        }

        function getEmail(){
            $.ajax({
                url: '/Home/GetUserEmail',
                type: 'GET',
                success: function (response) {
                    if (response.success) {

                        $('#userEmail').text(response.data);
                    }
                    else {
                        alert(response.message);
                    }
                },
                error: function (xhr, status, error) {
                }
            });
        }

    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>