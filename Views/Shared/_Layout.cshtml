@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitTrack</title>
    
    <link href="~/lib/google-fonts/googleFonts.css" rel="stylesheet">
    <link href="~/lib/notyf/notyf.min.css" rel="stylesheet">
    @* <link href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="~/lib/tailwind/tailwind-3.4.17.js"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Inter', 'sans-serif'] },
                    colors: {
                        slate: { 850: '#1e293b', 900: '#0f172a' },
                        emerald: { 400: '#34d399', 500: '#10b981', 600: '#059669', 900: '#064e3b' }
                    }
                }
            }
        }
    </script>

    <style>
        body { background-color: #0f172a; color: #f8fafc; }
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #0f172a; }
        ::-webkit-scrollbar-thumb { background: #334155; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #475569; }
        .glass-card { background-color: #1e293b; border: 1px solid #334155; }
        input[type=number]::-webkit-inner-spin-button, input[type=number]::-webkit-outer-spin-button { -webkit-appearance: none; margin: 0; }
        input[type=number] { -moz-appearance: textfield; }
    </style>
</head>
<body class="antialiased min-h-screen flex flex-col font-sans">
    
    <nav class="border-b border-slate-700 bg-slate-900/95 sticky top-0 z-50 backdrop-blur">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                
                <div class="flex items-center gap-2">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center gap-2 no-underline">
                        <i class="fa-solid fa-bolt text-emerald-500 text-2xl"></i>
                        <span class="font-bold text-xl tracking-tight text-white">Fit<span class="text-emerald-500">Track</span></span>
                    </a>
                </div>
                
                <div class="hidden md:flex space-x-8 text-sm font-medium text-slate-400">
                    <a asp-controller="Home" asp-action="Index"
                       class="@(currentController == "Home" && currentAction == "Index" ? "text-emerald-400 font-bold" : "hover:text-white transition")">
                        Início
                    </a>
                    <a asp-controller="Workout" asp-action="Index"
                       class="@(currentController == "Workout" && currentAction == "Index" ? "text-emerald-400 font-bold" : "hover:text-white transition")">
                        Treinos
                    </a>
                    <a asp-controller="History" asp-action="Index"
                       class="@(currentController == "History" ? "text-emerald-400 font-bold" : "hover:text-white transition")">
                        Histórico
                    </a>
                </div>

                <div class="flex items-center gap-3">
                    
                    <button type="button" id="mobile-menu-btn" class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-slate-400 hover:text-white hover:bg-slate-800 focus:outline-none transition">
                        <i class="fa-solid fa-bars text-xl"></i>
                    </button>

                    <div class="relative ml-1" id="profile-dropdown-container">
                        <button type="button" id="profile-btn" class="flex rounded-full bg-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-slate-800 transition">
                            <span class="sr-only">Abrir menu</span>
                            <div class="h-8 w-8 rounded-full bg-slate-700 flex items-center justify-center border border-slate-600 hover:border-emerald-500 transition">
                                <i class="fa-solid fa-user text-slate-300"></i>
                            </div>
                        </button>

                        <div id="profile-menu" class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-slate-800 py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none border border-slate-700 transition-all duration-200">
                            <div class="px-4 py-2 border-b border-slate-700">
                                <p class="text-xs text-slate-400">Logado como</p>
                                <p id="userEmail" class="text-sm font-medium text-white truncate">Carregando...</p>
                            </div>
                            <a href="/User" class="block px-4 py-2 text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                                <i class="fa-solid fa-user-gear mr-2 w-4"></i> Perfil
                            </a>
                            <a href="#" class="block px-4 py-2 text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                                <i class="fa-solid fa-gear mr-2 w-4"></i> Configurações
                            </a>
                            <div class="border-t border-slate-700 my-1"></div>
                            <a asp-controller="Login" asp-action="Logout" class="block px-4 py-2 text-sm text-red-400 hover:bg-slate-700 hover:text-red-300 transition w-full text-left">
                                <i class="fa-solid fa-arrow-right-from-bracket mr-2 w-4"></i> Sair
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="hidden md:hidden border-t border-slate-800 bg-slate-900" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <a asp-controller="Home" asp-action="Index"
                   class="block px-3 py-2 rounded-md text-base font-medium @(currentController == "Home" && currentAction == "Index" ? "bg-slate-800 text-emerald-400" : "text-slate-300 hover:bg-slate-800 hover:text-white")">
                   <i class="fa-solid fa-house mr-2 w-5 text-center"></i> Início
                </a>
                <a asp-controller="Workout" asp-action="Index"
                   class="block px-3 py-2 rounded-md text-base font-medium @(currentController == "Workout" && currentAction == "Index" ? "bg-slate-800 text-emerald-400" : "text-slate-300 hover:bg-slate-800 hover:text-white")">
                   <i class="fa-solid fa-dumbbell mr-2 w-5 text-center"></i> Treinos
                </a>
                <a asp-controller="History" asp-action="Index"
                   class="block px-3 py-2 rounded-md text-base font-medium @(currentController == "History" ? "bg-slate-800 text-emerald-400" : "text-slate-300 hover:bg-slate-800 hover:text-white")">
                   <i class="fa-solid fa-clock-rotate-left mr-2 w-5 text-center"></i> Histórico
                </a>
            </div>
        </div>
    </nav>

    <main role="main" class="flex-grow w-full">
        @RenderBody()
    </main>

    <div id="customConfirmModal" class="hidden fixed inset-0 z-[9999]" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm transition-opacity opacity-0" id="confirmBackdrop"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center">
                <div class="relative transform overflow-hidden rounded-2xl bg-slate-800 border border-slate-700 text-left shadow-2xl transition-all scale-95 opacity-0 sm:w-full sm:max-w-sm" id="confirmCard">
                    <div class="p-6 text-center">
                        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-red-500/10 mb-4 animate-pulse-slow">
                            <i class="fa-solid fa-triangle-exclamation text-2xl text-red-500"></i>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-2" id="confirmTitle">Tem certeza?</h3>
                        <p class="text-sm text-slate-400" id="confirmMessage">Essa ação não pode ser desfeita.</p>
                    </div>
                    <div class="bg-slate-900/50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 gap-2 border-t border-slate-700/50">
                        <button type="button" id="btn-confirm-yes" class="inline-flex w-full justify-center rounded-xl bg-red-600 px-4 py-2.5 text-sm font-bold text-white shadow-lg shadow-red-500/20 hover:bg-red-500 hover:shadow-red-500/40 transition-all sm:w-auto">Sim, excluir</button>
                        <button type="button" id="btn-confirm-no" class="mt-3 inline-flex w-full justify-center rounded-xl bg-slate-700 px-4 py-2.5 text-sm font-bold text-slate-300 shadow-sm ring-1 ring-inset ring-slate-600 hover:bg-slate-600 sm:mt-0 sm:w-auto transition-all">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-t border-slate-800 py-6 mt-8 bg-slate-900"></footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-touch-punch/jquery.ui.touch-punch.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/notyf/notyf.min.js"></script>
    <script src="~/lib/jquery-mask/jquery.mask.min.js"></script>

    <script>
        const notyf = new Notyf();
        
        $(document).ready(function() {
            const $btnProfile = $('#profile-btn');
            const $menuProfile = $('#profile-menu');

            const $btnMobile = $('#mobile-menu-btn');
            const $menuMobile = $('#mobile-menu');

            $btnMobile.on('click', function() {
                $menuMobile.slideToggle(200);
            });
            // ------------------------------------

            $btnProfile.on('click', function(e) {
                e.stopPropagation(); 
                $menuProfile.toggleClass('hidden');
            });

            $(document).on('click', function(event) {
                if (!$(event.target).closest('#profile-dropdown-container').length) {
                    $menuProfile.addClass('hidden');
                }
            });
            
            $(document).on('keydown', function(e) {
                if (e.key === "Escape") {
                    $menuProfile.addClass('hidden');
                    if (!$menuMobile.is(':hidden')) $menuMobile.slideUp(200);
                }
            });

            getEmail();
        });

        function getEmail(){
            $.ajax({
                url: '/Home/GetUserEmail',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        $('#userEmail').text(response.data);
                    }
                }
            });
        }
        
        function showConfirm(title, message, confirmText = "Sim, excluir", confirmColor = "red") {
            return new Promise((resolve) => {
                const $modal = $('#customConfirmModal');
                const $backdrop = $('#confirmBackdrop');
                const $card = $('#confirmCard');
                const $btnYes = $('#btn-confirm-yes');
                const $btnNo = $('#btn-confirm-no');
                const $title = $('#confirmTitle');
                const $msg = $('#confirmMessage');

                $title.text(title);
                $msg.text(message);
                $btnYes.text(confirmText);

                if(confirmColor === 'emerald') {
                    $btnYes.removeClass('bg-red-600 shadow-red-500/20 hover:bg-red-500 hover:shadow-red-500/40')
                        .addClass('bg-emerald-600 shadow-emerald-500/20 hover:bg-emerald-500 hover:shadow-emerald-500/40');
                } else {
                    $btnYes.removeClass('bg-emerald-600 shadow-emerald-500/20 hover:bg-emerald-500 hover:shadow-emerald-500/40')
                        .addClass('bg-red-600 shadow-red-500/20 hover:bg-red-500 hover:shadow-red-500/40');
                }

                $modal.removeClass('hidden');
                setTimeout(() => {
                    $backdrop.removeClass('opacity-0');
                    $card.removeClass('scale-95 opacity-0').addClass('scale-100 opacity-100');
                }, 10);

                const close = () => {
                    $backdrop.addClass('opacity-0');
                    $card.removeClass('scale-100 opacity-100').addClass('scale-95 opacity-0');
                    setTimeout(() => {
                        $modal.addClass('hidden');
                    }, 300);
                    
                    $btnYes.off('click');
                    $btnNo.off('click');
                };

                $btnYes.on('click', () => { close(); resolve(true); });
                $btnNo.on('click', () => { close(); resolve(false); });
            });
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>